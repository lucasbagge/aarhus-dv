 from time import time
 class Stopwatch:
     def __init__(self):
         # om uret k√∏rer til at starter med.
         self.running = False 

    def start(self):
        if not self.running:
            self.running = True
            self.start_time = time()
            self.laps = []
    def stop(self):
        self.end_time = time()
        self.running = False

    def lap(self):
        self.laps.append(time())

    def total_time(self):
        if self.running:
            end = time()
        else:
            end = self.end_time
        return end - self.start_time
    
    def lap_times(self):
        if self.running:
            end = time()
        else:
            end = self.end_time
        return [end - start for end, start in  
                zip(self.laps + [end], [self.start_time] + self.laps)] 

